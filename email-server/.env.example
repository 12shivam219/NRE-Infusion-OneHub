# Email Server Environment Variables
# Copy this file to .env and fill in your values

# Email Server Port
EMAIL_SERVER_PORT=3001

# Environment (development or production)
NODE_ENV=development

# Email Account Configuration
# Format: email1@gmail.com:app_password1;email2@gmail.com:app_password2
# For Gmail App Passwords: https://support.google.com/accounts/answer/185833
# CRITICAL: Never commit actual passwords - always use app-specific passwords
EMAIL_ACCOUNTS=your_email@gmail.com:your_app_password

# Legacy Format (Optional - supports single account fallback)
# EMAIL_USER=your_email@gmail.com
# EMAIL_PASSWORD=your_app_password

# CORS Configuration - Whitelist allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Google OAuth Configuration
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# API Key for Email Server Authentication
# Generate with: openssl rand -base64 32 (or node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")
API_KEY=your_generated_api_key_here

# Supabase Configuration (Optional - for campaign status persistence)
# Get from: https://app.supabase.com/project/[project-id]/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# SECURITY: Encryption master key for password decryption (CRITICAL)
# IMPORTANT: This key is strictly backend-only. Do NOT expose in frontend.
# Use `ENCRYPTION_MASTER_KEY` for the email server and keep it secret in your deployment.
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Store this value securely in your deployment environment (e.g., AWS Secrets Manager, Azure Key Vault)
ENCRYPTION_MASTER_KEY=your_generated_encryption_key_here

# Scheduler Configuration (Optional - for Gmail sync scheduling)
SCHEDULER_ENABLED=false
SCHEDULER_INTERVAL_MS=3600000
