{
  "name": "loster-email-server",
  "version": "1.0.0",
  "description": "Email server for Loster CRM",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "start:worker": "node worker.js",
    "dev:worker": "node --watch worker.js",
    "start:scheduler": "node scheduler.js",
    "start:all": "concurrently \"npm start\" \"npm run start:worker\"",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:worker\"",
    "test": "node test-all-scenarios.js"
  },
  "dependencies": {
    "@mui/x-data-grid": "^8.23.0",
    "@supabase/supabase-js": "^2.37.0",
    "body-parser": "^1.20.2",
    "bullmq": "^5.66.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "ioredis": "^5.8.2",
    "nodemailer": "^6.10.1",
    "p-limit": "^7.2.0",
    "rate-limit-redis": "^4.3.1",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "node-fetch": "^3.3.2"
  }
}
